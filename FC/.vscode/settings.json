	},
	"[c]": {
		"editor.tabSize": 4,
		"editor.insertSpaces": false
	},
	"[json]": {
		"editor.tabSize": 4,
		"editor.insertSpaces": false
	},
	"[ini]": {
		"editor.tabSize": 4,
		"editor.insertSpaces": false
	}
}
